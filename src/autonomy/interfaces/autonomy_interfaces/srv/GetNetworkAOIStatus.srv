# GetNetworkAOIStatus.srv
# Service to query network-aware AOI status

# Request
string sensor_name          # Specific sensor to query (empty for all)
bool include_history        # Whether to include historical data
uint32 history_samples      # Number of historical samples to return (0 = current only)
bool include_network_stats  # Whether to include network statistics

---
# Response
bool success               # Whether query was successful
string message             # Status message

# Current status
autonomy_interfaces/AOIStatus[] sensor_status  # Status for each sensor

# Historical data (if requested)
float64[] aoi_history       # Historical AoI values
builtin_interfaces/Time[] timestamp_history  # Corresponding timestamps

# System summary
autonomy_interfaces/AOIMetrics system_metrics  # Overall system AoI metrics

# Network analysis (if requested)
string[] transport_types     # Available transport types
uint32[] transport_counts    # Sensor count per transport type
float64[] transport_latencies # Average latency per transport type
bool[] transport_congested   # Congestion status per transport type
