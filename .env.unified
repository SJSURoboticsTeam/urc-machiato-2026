# Unified Environment Configuration for URC 2026
# Environment variables for different deployment scenarios

# ==================================================
# GLOBAL SETTINGS
# ==================================================
URC_ENV=development
ROS_DISTRO=humble
ROS_DOMAIN_ID=42
URC_CONFIG_FILE=config/development.yaml

# ==================================================
# NETWORKING
# ==================================================
WEBSOCKET_PORT=8765
API_PORT=8080
CAN_MOCK_PORT=8766
FRONTEND_PORT=3000
GAZEBO_GUI_PORT=11345
GAZEBO_MASTER_PORT=11311
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# ==================================================
# HEALTH CHECK SETTINGS
# ==================================================
HEALTHCHECK_INTERVAL=30
HEALTHCHECK_TIMEOUT=10
HEALTHCHECK_START_PERIOD=15

# ==================================================
# TESTING CONFIGURATION
# ==================================================
TEST_TYPE=all
TEST_PARALLEL_WORKERS=4
TEST_MEMORY_LIMIT=4G
TEST_CPU_LIMIT=2.0

# ==================================================
# SIMULATION CONFIGURATION
# ==================================================
SIMULATION_WORLD=urc_mars_world
SIMULATION_ROBOT=urc_rover
SENSOR_SIM_TYPE=complete
SENSOR_UPDATE_RATE=30.0
SENSOR_NOISE_LEVEL=0.1

# ==================================================
# SERVICE CONFIGURATION
# ==================================================
SAFETY_MODE=standard
NAVIGATION_MODE=standard
VISION_USE_GPU=false
VISION_MODEL_PATH=models/vision/

# ==================================================
# MONITORING CONFIGURATION
# ==================================================
METRICS_EXPORT_INTERVAL=5

# ==================================================
# DISPLAY CONFIGURATION (for simulation)
# ==================================================
DISPLAY=:99